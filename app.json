{
  "expo": {
    "name": "kriya",
    "slug": "kriya",
    "scheme": "acme",
    "plugins": [
      [
        "expo-font",
        {
          "android": {
            "fonts": [
              {
                "fontFamily": "Alegreya",
                "fontDefinitions": [
                  { "path": "./assets/fonts/Alegreya-Black.otf",   "weight": 900, "style": "normal" },
                  { "path": "./assets/fonts/Alegreya-Regular.otf", "weight": 400, "style": "normal" },
                  { "path": "./assets/fonts/Alegreya-Italic.otf",  "weight": 400, "style": "italic" }
                ]
              },
              {
                "fontFamily": "SourceSerifPro",
                "fontDefinitions": [
                  { "path": "./assets/fonts/SourceSerifPro-ExtraLight.otf", "weight": 200, "style": "normal" },
                  { "path": "./assets/fonts/SourceSerifPro-Light.otf",      "weight": 300, "style": "normal" },
                  { "path": "./assets/fonts/SourceSerifPro-Regular.otf",    "weight": 400, "style": "normal" },
                  { "path": "./assets/fonts/SourceSerifPro-It.otf",         "weight": 400, "style": "italic" },
                  { "path": "./assets/fonts/SourceSerifPro-Semibold.otf",   "weight": 600, "style": "normal" },
                  { "path": "./assets/fonts/SourceSerifPro-SemiboldIt.otf", "weight": 600, "style": "italic" }
                ]
              },
              {
                "fontFamily": "SpaceMono",
                "fontDefinitions": [
                  { "path": "./assets/fonts/spacemono_regular.ttf",     "weight": 400, "style": "normal" },
                  { "path": "./assets/fonts/spacemono_italic.ttf",      "weight": 400, "style": "italic" },
                  { "path": "./assets/fonts/spacemono_bold.ttf",        "weight": 700, "style": "normal" },
                  { "path": "./assets/fonts/spacemono_bolditalic.ttf",  "weight": 700, "style": "italic" }
                ]
              },
              {
                "fontFamily": "Samanya",
                "fontDefinitions": [
                  { "path": "./assets/fonts/AMS-Samanya-Bold.ttf",     "weight": 700, "style": "normal" },
                  ]
              }
            ]
          },
          "ios": {
            "fonts": [
              "./assets/fonts/Alegreya-Black.otf",
              "./assets/fonts/Alegreya-Italic.otf",
              "./assets/fonts/Alegreya-Regular.otf",
              "./assets/fonts/SourceSerifPro-ExtraLight.otf",
              "./assets/fonts/SourceSerifPro-It.otf",
              "./assets/fonts/SourceSerifPro-Light.otf",
              "./assets/fonts/SourceSerifPro-Regular.otf",
              "./assets/fonts/SourceSerifPro-Semibold.otf",
              "./assets/fonts/SourceSerifPro-SemiboldIt.otf",
              "./assets/fonts/spacemono_bold.ttf",
              "./assets/fonts/spacemono_bolditalic.ttf",
              "./assets/fonts/spacemono_italic.ttf",
              "./assets/fonts/spacemono_regular.ttf",
               "./assets/fonts/AMS-Samanya-Bold.ttf"
            ]
          }
        }
      ]
    ],
    "assetBundlePatterns": ["**/*"],
    "android": {
      "package": "com.surya7314.kriya",
      "edgeToEdgeEnabled": true,
      "softwareKeyboardLayoutMode": "resize"
    },
    "ios": {
      "bundleIdentifier": "com.surya7314.kriya"
    }
  }
}
