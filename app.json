{
  "expo": {
    "name": "kriya",
    "slug": "kriya",
    "scheme": "acme",
    "plugins": ["expo-router", "expo-sqlite", "expo-asset"],
    "assetBundlePatterns": ["**/*"],

    "android": {
      "package": "com.surya7314.kriya",
      "softwareKeyboardLayoutMode": "pan",
      "androidStatusBar": {
        "translucent": true
